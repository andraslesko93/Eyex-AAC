<Page x:Class="EyexAAC.View.Registrate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EyexAAC"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Registrate">

    <Grid>
        <GroupBox Header="Regisztráció" HorizontalAlignment="Center" VerticalAlignment="Center" Height="500" Width="500">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">
                <StackPanel>
                    <Label Content="Felhasználónév:"/>
                    <TextBox x:Name="username" Margin="5" MaxLines="1" TextWrapping="NoWrap"/>
                    <Label Content="Jelszó"/>
                    <PasswordBox x:Name="password" Margin="5"  VerticalContentAlignment="Center"/>
                    <Label Content="Jelszó ismét:"/>
                    <PasswordBox x:Name="confirmPassword" Margin="5" VerticalContentAlignment="Center"/>
                    <Label Content=""/>
                    <Button Content="Regisztráció" Click="Registrate_Button_Click" Margin="5"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Page>
